{
  "name": "url-shortener",
  "version": "1.0.0",
  "description": "A high-performance URL shortener with analytics and QR code generation",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "postinstall": "cd client && npm install",
    "setup": "node setup.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=json-summary --coverageReporters=text --coverageReporters=lcov",
    "lint": "echo 'Linter not configured' || exit 0"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "lru-cache": "^10.0.0",
    "mongoose": "^7.5.0",
    "nanoid": "^3.3.11",
    "nodemailer": "^6.10.1",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "url-shortener",
    "analytics",
    "qr-code",
    "mongodb"
  ],
  "author": "Sebastian Feliciano",
  "license": "MIT"
}
